{{> frm_std_function}}
{{> frm_list_std}}

<script>

    $(document).ready(function () {

      $('#tableData tr').each(function (i) {
        {{> add_name2id}}
      });
    });
    
</script>

  <table id="tableData" name="tableData" class="table table-bordered table-hover table-condensed ">

    {{> std_tab_hdr}}
    {{#each obj}}
    <tr bgcolor="{{this.bg}}" id="myTable" name="myTable">
      <td>
        <button id="btn1" title="Ändern des Vorgangs"  class="glyphicon glyphicon-pencil btn btn-xs" onclick='replaceClass("/lib/transaction/enter?id={{this._id}}")'></button>
        <button id="btn4" title="Vorgäbe zu diesem Lehrer"  class="glyphicon  glyphicon-user btn btn-xs" onclick='replaceClass("/lib/transaction/list?LID={{this.LID}}")'></button>
      </td>
      <input type="hidden" id="_id" name="_id" value="{{this._id}}" /></td>
      <td id="{{@index}}LID" name="LID">{{this.LID}}</td>
      <td id="TID" name="TID">{{this.TID}}</td>
      <td id="CID" name="CID">{{this.CID}}</td>
      <td id="{{@index}}BID" name="BID">{{this.BID}}</td>
      <td id="value" name="value">{{this.value}}</td>
      <td id="enabled" name="enabled">{{this.enabled}}</td>
      <td id="timestamp" name="timestamp">{{this.ti}}</td>
      <td width=10%>
        <button id="btn2" title="Kopieren des Eintrags" class="glyphicon glyphicon-duplicate btn btn-xs"
          onclick='replaceClass("/lib/transaction/copy?id={{this._id}}")'></button>
        <button id="btn3" title="Löschen des Eintrags" class="glyphicon glyphicon-trash btn btn-xs" onclick='deleteClass("{{this._id}}")'></button>
        <button id="btn4" title="Vorgänze zu diesem Buch" class="glyphicon glyphicon-eye-open btn btn-xs" onclick='replaceClass("/lib/transaction/list?BID={{this.BID}}")'></button>
      </td>
    </tr>
    {{/each}}

  </table>
  {{frm_footer_list}}
</div>