{{!< layout}}


<script>

$(function() {
    $("#datepicker").datepicker({
        numberOfMonths : 1,
        showButtonPanel : true,
        altFormat : "@",
        altField : "alternate",
        dateFormat : "yy-mm-dd",
        minDate : 0

    }, $.datepicker.regional['de']);
});


$(document).ready(function() {
     $("#FRMppr").submit(function(evt){
        evt.preventDefault();
        var dateString = $('#datepicker').val();
        eda=Date.parse(dateString)/1000 | 0;

        model_data =
        { 'registration': document.getElementById("registration").value.toUpperCase(),
          'ptype': document.getElementById("ptype").value.toUpperCase(),
          'eta': document.getElementById("datepicker").value,
          'eda': eda,
          'name': document.getElementById("name").value,
          'email': document.getElementById("email").value,
          'passenger': document.getElementById("passenger").value,
          'address': document.getElementById("address").value
        };

        $.ajax({
            url: '/pilots/ppr/',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(model_data),
            dataType: 'json',
            success: function(e){
               }
          });
          window.location.href = "/pilots/myflights";
          return false;
    });
});


</script>


<style>
textarea {
    width: 100%;
    height: 150px;
    padding: 12px 20px;
    box-sizing: border-box;
    border: 2px solid #ccc;
    border-radius: 4px;
    background-color: #f8f8f8;
    font-size: 16px;
    resize: none;
}
</style>
  <div style="background-color:LightBlue; padding-top:10px; padding-bottom:20px" class="container">
<h1>{{title}}</h1>
    <form id="FRMppr" name="FRMppr" class="form-horizontal"  >

      <div class="form-group">
        <label class="control-label col-sm-2" for="ETA-13">ETA (Date):</label>
        <div class="col-sm-2">
          <input id="datepicker" type="text" class="form-control" placeholder="Enter date of arival" required>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label col-sm-2" for="registration">Registration:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="registration" placeholder="Enter Registration (DEWKW)" pattern="[A-Za-z]{5}" style='text-transform:uppercase' required>
        </div>
      </div>

      <div class="form-group">
          <label class="control-label col-sm-2" for="ptype">Type:</label>
          <div class="col-sm-10">
            <input  type="text" class="form-control" id="ptype" placeholder="Enter type of plain e.g. PA28" style='text-transform:uppercase' required>
          </div>
      </div>

      <div class="form-group">
        <label class="control-label col-sm-2" for="Name">Name:</label>
        <div class="col-sm-10">
          <input  id="name" type="text" class="form-control"  placeholder="Enter your Name e.g. Charles Lindbergh" pattern="[A-Z a-z].{5,}" required>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label col-sm-2" for="email">eMail:</label>
        <div class="col-sm-10">
          <input  id="email" type="email" class="form-control"  placeholder="Enter your eMail e.g. name@gmx.de" required>
        </div>
     </div>

     <div id=divPassenger class="form-group">
       <label class="control-label col-sm-2" for="value">Passengers:</label>
       <div class="col-sm-4">
         <input id=passenger type="text" class="form-control" id="value" placeholder="Enter Value" value=1>
       </div>
     </div>

     <div id=divAddress class="form-group">
       <label class="control-label col-sm-2" for="value">Address:</label>
       <div class="col-sm-4">
          <textarea id="address"></textarea>
       </div>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
          <button type="submit" class="btn btn-primary" >Submit</button>
          <a href="{{cancel}}" id="cancel" name="cancel" class="btn btn-default">Cancel</a>
      </div>
    </div>
   </form>

</div>
