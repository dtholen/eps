{{!< layout01}}
{{#if refresh}}
    <meta http-equiv="refresh" content="10"/>
{{else}}
      <meta http-equiv="refresh" content="600"/>
{{/if}}
<script>

function myBID(x,i) {
      rows = document.getElementById('tableData').getElementsByTagName('TR');
      col = rows[x.rowIndex].getElementsByTagName('TD');
      if ($('#mode_s').val()=='c') self.location.href='/transaction/create?BID='+col[i].innerHTML
      else {
        $('#mode_s').val('c');
        self.location.href='/library';
      }
    }

function deleteClass(_id) {
     $.post("{{link}}", {"_id" : _id, "action":"d" }, function(result){
    });
    $('#mode_s').val('d');
  };
</script>

<style>
    th { background-color: #aaaaaa }
    table tr:nth-child(2){ counter-reset: rowNumber;}
    table tr { counter-increment: rowNumber;}
    table tr td:first-child::before {
    content: counter(rowNumber);
}


</style>

<div style="border-radius: 10px; background-color:grey; padding-left:10px; padding-top:5px; padding-bottom: 5px" class="container">

     {{#each sid}}
        <button onclick="window.location.href='/library?SID={{this.ID}}'" type="button" class="btn btn-info">{{this.ID}}</button>
     {{/each}}

</div>

<div style="border-radius: 10px; background-color:BurlyWood; padding-left:10px; padding-top:5px; padding-bottom: 5px" class="container">
  <h1>{{title}}</h1>
  <div class="entry">
    <input  type=hidden value="c"   name="mode_s" id="mode_s">
    <table id="tableData" name="tableData" class="table table-bordered table-hover table-condensed " >
     <tr>
       <th>No</th>
       <th>ID</th>
       <th></th>
       <th>Name</th>
       <th>Fach</th>
       <th>Bestand</th>
       <th>ausgeliegen</th>
       <th>vorhanden</th>
     </tr>
     {{#each obj}}
      <tr bgcolor="{{this.bg}}" id="myTabler" name="myTabler"  onclick="myBID(this,1)" >
        <td></td>
        <td id="id">{{this.ID}}</td>
        <td id="class">{{this.class}}</td>
        <td>{{this.name}}</td>
        <td>{{this.SID}}</td>
        <td>{{this.v1}}</td>
        <td>{{this.v2}}</td>
        <td>{{this.v3}}</td>
        <td width=10%>
          <button class="glyphicon glyphicon-trash" onclick='deleteClass("{{this.ID}}")'></button>
        </td>
      </tr>
     {{/each}}
    </table>

    <form action="input_button.htm">
    <p>
    <input type="button" name="Ausleihen" value="Buch ausleihen"
    onClick="self.location.href='/transaction/create'">
    </p>

    </form>



  </div>
</div>
